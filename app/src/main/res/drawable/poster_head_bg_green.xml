<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:dither="true"
            android:shape="oval">
            <solid android:color="@color/white" />
            <stroke
                android:width="1dp"
                android:color="@color/dove_gray" />
        </shape>
    </item>
    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape
            android:shape="oval"
            android:useLevel="true">
            <size
                android:width="50dp"
                android:height="50dp" />
            <solid android:color="@color/red" />
            <stroke
                android:width="1dp"
                android:color="@color/green" />
        </shape>
    </item>
</layer-list>