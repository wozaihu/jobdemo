<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/title_bar" />

    <RelativeLayout
        android:id="@+id/content_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="10dp">

        <Button
            android:id="@+id/btnShowNetworkIsAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/networkIsAvailable" />

        <Button
            android:id="@+id/btnNetworkIsWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/btnShowNetworkIsAvailable"
            android:text="@string/isWifiConnect" />

        <Button
            android:id="@+id/btnNetworkIsCellular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnShowNetworkIsAvailable"
            android:text="@string/isCellularConnect" />

        <Button
            android:id="@+id/btnShowNetworkType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnNetworkIsCellular"
            android:layout_toEndOf="@+id/btnNetworkIsCellular"
            android:text="@string/showNetworkType" />

        <Button
            android:id="@+id/btnShowCellphoneIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnNetworkIsCellular"
            android:text="@string/showCellphoneIP" />

        <Button
            android:id="@+id/btnOpenNetworkSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnShowCellphoneIP"
            android:layout_toEndOf="@+id/btnShowCellphoneIP"
            android:text="@string/openCellphoneNetworkSetting" />

        <Button
            android:id="@+id/btnShowDefaultTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnOpenNetworkSetting"
            android:text="@string/showDefaultTip" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/img1"
            android:layout_centerInParent="true"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/img1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/img2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            tools:ignore="Autofill,LabelFor,TextFields" />
    </RelativeLayout>
</LinearLayout>